<div class="outer-container proj-cont">
	<!--<div class="container header-cont">
		<h1>Projects</h1>
	</div>-->
	<div class="container">
		<div class="row filter-section"> 
			<div class="col-sm-6 col-sm-offset-6 filter-cont">
				<div class="dropdown cat-menu">
					<button class="btn btn-default dropdown-toggle trigger" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
	    				<span>CATEGORIES</span>
					</button>
					<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
						<li class="cat-menu-li"><a href="/blog" class="">All Categories</a></li>
						{{# each data.categories }}
							<li class="cat-menu-li">
								<a href="{{categoryUrl key}}" class="false" >{{name}}</a>
							</li>	
						{{/each}}
					</ul>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 project-thumbs">
				<!--<h4 class="text-weight-normal">Showing {{ data.posts.results.length}} post.</h4>-->
				<div class="blog">
					{{# each data.posts.results}}
					<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="col-xs-12 col-md-6 project-thumb post">
						<!--<h2><a href="{{postUrl slug}}">{{{title}}}</a></h2>
						<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
								{{#if author.name.first}}by {{author.name.first}}{{/if}}
						</p>-->
						{{#if image}}
							<a href="{{postUrl slug}}">
								<img src="{{{cloudinaryUrl image crop='fit' }}}" class="img project-img">
							</a>
						{{/if}}
						<!--<p>{{{content.brief}}}</p>
						{{#if content.extended}}<p class="read-more"><a href="{{postUrl slug}}">Read more...</a></p>{{/if}}-->
					</div>
					{{/each}}
				</div>
			</div>
		</div>
		{{>pagination}}
	</div>
</div>
